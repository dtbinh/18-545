<scene>
    <camera>
        <fov v="1.57"/>
        <near_clip v=".01"/>
        <far_clip v="200.0"/>
        <position x="1.0" y="1.0" z="-1.25"/>
        <orientation a="3.14" x="-0.707" y="-0.707" z="0.0"/>
    </camera>

    <background_color r="0.4" g="0.4" b="0.4"/>
    <refractive_index v="1.0"/>
    <ambient_light r="0.2" g="0.2" b="0.2"/>

    <point_light>
        <position x="1.0" y="1.0" z="-10.0"/>
        <color r="1.0" g="1.0" b="1.0"/>
    </point_light>

    <material name="cube">
        <diffuse r="0.9" g="0.9" b="0.9"/>
        <specular r="0.1" g="0.1" b="0.1"/>
    </material>

    <vertex name="f1" material="cube">
        <position y="0.0" x="2.0" z="1.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="0.0" v="0.0"/>
    </vertex>

    <vertex name="f2" material="cube">
        <position y="0.0" x="1.0" z="0.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="0.0" v="500.0"/>
    </vertex>

    <vertex name="f3" material="cube">
        <position y="1.0" x="2.0" z="0.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="500.0" v="500.0"/>
    </vertex>

    <vertex name="f4" material="cube">
        <position y="1.0" x="0.0" z="2.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="500.0" v="0.0"/>
    </vertex>

    <vertex name="f5" material="cube">
        <position y="2.0" x="0.0" z="1.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="500.0" v="0.0"/>
    </vertex>

     <vertex name="f6" material="cube">
        <position y="2.0" x="1.0" z="2.0"/>
        <normal y="0.0" x="1.0" z="0.0"/>
        <tex_coord u="500.0" v="0.0"/>
    </vertex>

     <triangle material="cube">
        <position y="0.0" x="0.0" z="0.0"/>
        <vertex name="f1"/>
        <vertex name="f2"/>
        <vertex name="f3"/>
    </triangle> 

     <triangle material="cube">
        <position y="0.0" x="0.0" z="0.0"/>
        <vertex name="f4"/>
        <vertex name="f5"/>
        <vertex name="f6"/>
    </triangle> 

</scene>
